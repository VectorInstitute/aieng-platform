# Google Cloud Configuration
GCP_PROJECT_ID=coderd
FIRESTORE_DATABASE_ID=onboarding

# GitHub OAuth Configuration
# Create a GitHub OAuth App at: https://github.com/settings/developers
# For organization access, register the OAuth app under the organization settings
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# GitHub API Token (for checking organization membership and invites)
# Create a token at: https://github.com/settings/tokens
# Required scopes: read:org, read:user
GITHUB_TOKEN=your_github_personal_access_token

# NextAuth v5 (Auth.js) Configuration
# Generate a secret with: openssl rand -base64 32
# Note: AUTH_URL should NOT include the basePath - Next.js handles that automatically
AUTH_SECRET=your_nextauth_secret_key
AUTH_URL=http://localhost:3000

# Server Configuration
PORT=8080
